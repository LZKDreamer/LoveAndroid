<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    app:cardBackgroundColor="@color/bg_card_view"
    app:cardCornerRadius="@dimen/dp_0">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/project_list_item_thumb_iv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dp_5"
            android:layout_marginHorizontal="@dimen/dp_10">
            <TextView
                android:id="@+id/project_list_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/common_text_default"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="标题"/>
            <TextView
                android:id="@+id/project_list_item_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/item_article_desc"
                android:text="内容"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="4"
                android:layout_below="@+id/project_list_item_title_tv"/>
            <TextView
                android:id="@+id/project_list_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/item_article_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="时间"
                />
            <TextView
                android:id="@+id/project_list_item_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/item_article_author"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/project_list_item_time_tv"
                android:text="作者"
                />
            <ImageView
                android:id="@+id/project_list_item_collect_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/article_collect_selector"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>