<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_0"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/bg_card_view"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/content_item_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_article_author"
                android:text="author"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@+id/article_item_tag_tv"
                android:layout_centerVertical="true"

                />
            <TextView
                android:id="@+id/content_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="10分钟前"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/item_article_time"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/content_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/common_text_default"
            android:text="Android职业进阶课程免费送"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:id="@+id/content_item_chapter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/item_article_author"
                android:text="干货资源/课程推荐"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/content_item_collect_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/article_collect_selector" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>